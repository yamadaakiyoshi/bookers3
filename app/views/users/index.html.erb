
<div class="row">
<div class="col-sm-3">
      <%= render 'users/list', book: @book,user: @user%>
</div>

<div class="col-sm-9">
<h2>Users</h2>
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
		<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><% if user.profile_image.present? %>
				<%= attachment_image_tag(user, :profile_image, :fill,40, 40 ) %>
				<% else %>
				<%=image_tag "no_image.jpg",size:  "40x40" %>
				<% end %>
			</td>
			<td><%= user.name %></td>
			<td><%= link_to "Show",user_path(user), class: "user_#{user.id}"%></td>
		</tr>
	<% end %>
		</tbody>
</table>
</div>
</div>
</div>

