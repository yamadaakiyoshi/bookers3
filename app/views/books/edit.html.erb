
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control book_title" %><br>
    <%= f.label :opinion%><br>
    <%= f.text_area :opinion, class: "form-control book_body"%><br>
    <%= f.submit 'Update book' ,class: "btn btn-primary form-control"%>
<% end %>

<%=link_to "Show", book_path(@book.id), class: "book_#{@book.id}"%> |
<%=link_to "Back", books_path, class: "back" %>
</div>
</div>
</div>
